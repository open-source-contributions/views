{
  "name": "selami/views",
  "type": "library",
  "description": "Templating engines collection.",
  "keywords": ["Selami", "View", "Twig", "Smarty", "Plates", "Mustache", "Latte"],
  "homepage": "https://github.com/selamiphp/router",
  "license": "MIT",
  "authors": [
    {
      "name": "Mehmet Korkmaz",
      "email": "mehmet@mkorkmaz.com",
      "homepage": "https://mkorkmaz.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.0",
    "psr/container": "^1.0",
    "selami/stdlib": "^1.0",
    "twig/twig": "^2.4",
    "twig/extensions": "^1.5"
  },
  "suggest": {
    "league/plates": "3.* for Plates Templating Engine",
    "smarty/smarty": "~3.1 for Smarty Templating Engine",
    "latte/latte": "~2.4.2 for Latte Templating Engine",
    "mustache/mustache": "2.11.1 for Mustache Templating Engine"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "satooshi/php-coveralls": "~1.0",
    "phpunit/phpcov": "^4.0",
    "zendframework/zend-servicemanager":"^3.3"
  },
  "autoload": {
    "psr-4": {
      "Selami\\View\\": "src/",
      "Selami\\View\\Twig\\": "src/Twig/",
      "Selami\\View\\Twig\\Functions\\": "src/Twig/Functions"
    }
  }
}
